@model CarsApp.Models.Car

@{
    ViewData["Title"] = "Create";
}

<h1>Create Car</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IsNew" class="control-label"></label>
                @Html.DropDownListFor(x => x.IsNew, new SelectListItem[] { new SelectListItem("New", "true"), new SelectListItem("Used", "false") }, new { @class = "form-control" })
                <span asp-validation-for="IsNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control brand" autocomplete="off" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control model" autocomplete="off" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" autocomplete="off" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" autocomplete="off" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Car Photo</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="imageFile" accept=".jpg,.png,.jpeg" />
                    <label class="custom-file-label" for="imageFile">Choose Image</label>
                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
